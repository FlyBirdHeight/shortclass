<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.adsion.mapper.RoleMapper">

    <select id="getById" resultType="com.adsion.bean.Role" parameterType="int">
        select * from roles where id = #{id}
    </select>

    <select id="getAll" resultType="com.adsion.bean.Role">
        select * from roles
    </select>

</mapper>